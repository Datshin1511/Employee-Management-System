@page "/tickets/delete"

@inject EmployeeManagementSystem.Data.EMSDbContext DB
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Manager")]

@using EmployeeManagementSystem.Models
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>LeaveRecord</h4>
    <hr />
    @if (leaverecord is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">EmployeeID</dt>
            <dd class="col-sm-10">@leaverecord.EmployeeID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LeaveReason</dt>
            <dd class="col-sm-10">@leaverecord.LeaveReason</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LeaveStatusMsg</dt>
            <dd class="col-sm-10">@leaverecord.LeaveStatusMsg</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LeaveStatus</dt>
            <dd class="col-sm-10">@leaverecord.LeaveStatus</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">TicketDate</dt>
            <dd class="col-sm-10">@leaverecord.TicketDate</dd>
        </dl>
        <EditForm method="post" Model="leaverecord" OnValidSubmit="DeleteLeaveRecord" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(leaverecord is null)">Delete</button> |
            <a href="/tickets">Back to List</a>
        </EditForm>
    }
</div>
