<div class="row justify-content-end">
    <div class="col"></div>
    <div class="col-3 justify-content-end">Date: @currentDate</div>
</div>

@code {
    public string? currentDate;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        currentDate = DateTime.Now.ToString("dd/MM/yyyy");
    }
}
