@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main class="flex-wrapper">
        <div class="top-row px-4">

            <AuthorizeView>
                <NotAuthorized>
                    <div class="nav-item px-1 ms-1">
                        <a href="/login"><span class="bi bi-box-arrow-in-right me-1"></span> Login</a>
                    </div>
                    <div class="nav-item px-1 me-1">
                        <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
                    </div>
                </NotAuthorized>

                <Authorized>
                    <div class="nav-item px-1 ms-1">
                        <a href="/profile"><span class="bi bi-person-circle me-1"></span> Profile</a>
                    </div>
                    <div class="nav-item px-1 me-1">
                        <a class="btn btn-primary" href="/logout"> Logout</a>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>

    </main>

</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>